<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.main.stepcount.StepCountMergeFragment">

    <data>
        <variable name="ViewModel" type="de.dviererbe.healthtrack.presentation.main.stepcount.StepCountMergeFragment.StepCountMergeViewModelDataBindingAdapter"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/steps_merge_title_stepcount" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:digits="0123456789"
            android:textSize="19sp"
            android:inputType="number"
            android:text="@={ViewModel.stepCount}"
            android:enabled="@{ViewModel.IsEditable, default=false}" />

        <TextView
            android:visibility="@{ViewModel.stepCountErrorMessageVisibility, default=invisible}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#F00"
            android:text="@string/steps_merge_error_stepcount"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:text="@string/steps_merge_title_goal" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:digits="0123456789"
            android:textSize="19sp"
            android:inputType="number"
            android:text="@={ViewModel.goal}"
            android:enabled="@{ViewModel.IsEditable, default=false}" />

        <TextView
            android:visibility="@{ViewModel.goalErrorMessageVisibility, default=invisible}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#F00"
            android:text="@string/steps_merge_error_Goal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textStyle="bold"
            android:text="@string/steps_merge_title_DateTime" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:text="@{ViewModel.dateTimeOfMeasurement, default=`{Date} {Time}`}" />

            <Button
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:drawableLeft="@drawable/ic_baseline_edit_24"
                android:onClick="@{() -> ViewModel.OnPickDateTimeOfMeasurementButtonClicked()}"
                android:enabled="@{ViewModel.IsEditable, default=false}" />
            <Button
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="@string/steps_merge_button_now"
                android:onClick="@{() -> ViewModel.OnSetDateTimeOfMeasurementToNowButtonClicked()}"
                android:enabled="@{ViewModel.IsEditable, default=false}" />
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:enabled="@{ViewModel.isSaveButtonEnabled, default=false}"
            android:text="@{ViewModel.SaveButtonLabel, default=@string/steps_merge_button_create}"
            android:onClick="@{() -> ViewModel.OnSaveButtonClicked()}"/>

        <TextView
            android:visibility="@{ViewModel.RecordCouldNotLoadedErrorMessageVisibility, default=visible}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#F00"
            android:text="@string/steps_merge_information_loading_failed" />
    </LinearLayout>
</layout>