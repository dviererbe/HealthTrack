<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.main.bloodpressure.BloodPressureMergeFragment">

    <data>
        <variable name="ViewModel" type="de.dviererbe.healthtrack.presentation.main.bloodpressure.BloodPressureMergeFragment.BloodPressureMergeViewModelDataBindingAdapter"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Systolic, Diastolic, Unit -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Systolic -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/bloodpressure_merge_title_systolic" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:digits="0123456789"
                    android:textSize="19sp"
                    android:inputType="number"
                    android:text="@={ViewModel.systolicValue}"
                    android:enabled="@{ViewModel.IsEditable, default=false}" />
            </LinearLayout>

            <!-- Diastolic -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/bloodpressure_merge_title_diastolic" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:digits="0123456789"
                    android:textSize="19sp"
                    android:inputType="number"
                    android:text="@={ViewModel.diastolicValue}"
                    android:enabled="@{ViewModel.IsEditable, default=false}" />
            </LinearLayout>

            <!-- Unit -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/bloodpressure_merge_title_unit" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adapter="@{ViewModel.BloodPressureUnitsAdapter}"
                    android:selectedItemPosition="@={ViewModel.selectedBloodPressureUnit}"
                    android:enabled="@{ViewModel.IsEditable, default=false}" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#F00"
            android:visibility="@{ViewModel.systolicValueErrorMessageVisibility, default=invisible}"
            android:text="@string/bloodpressure_merge_error_systolic_value_invalid" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#F00"
            android:visibility="@{ViewModel.diastolicValueErrorMessageVisibility, default=invisible}"
            android:text="@string/bloodpressure_merge_error_diastolic_value_invalid" />

        <!-- Pulse -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textStyle="bold"
            android:text="@string/bloodpressure_merge_title_pulse" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:digits="0123456789"
            android:textSize="19sp"
            android:inputType="number"
            android:text="@={ViewModel.pulseValue}"
            android:enabled="@{ViewModel.IsEditable, default=false}" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#F00"
            android:visibility="@{ViewModel.pulseValueErrorMessageVisibility, default=invisible}"
            android:text="@string/bloodpressure_merge_error_pulse_value_invalid" />

        <!-- Medication -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textStyle="bold"
            android:text="@string/bloodpressure_merge_title_medication" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adapter="@{ViewModel.MedicationStateAdapter}"
            android:selectedItemPosition="@={ViewModel.selectedMedicationState}"
            android:enabled="@{ViewModel.IsEditable, default=false}" />

        <!-- Date Time -->

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:textStyle="bold"
                android:text="@string/bloodpressure_merge_title_datetime"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:text="@{ViewModel.dateTimeOfMeasurement, default=`{Date} {Time}`}" />

            <Button
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:drawableLeft="@drawable/ic_baseline_edit_24"
                android:enabled="@{ViewModel.IsEditable, default=false}"
                android:onClick="@{() -> ViewModel.OnPickDateTimeOfMeasurementButtonClicked()}"/>
            <Button
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="@string/bloodpressure_merge_button_now"
                android:enabled="@{ViewModel.IsEditable, default=false}"
                android:onClick="@{() -> ViewModel.OnSetDateTimeOfMeasurementToNowButtonClicked()}" />
        </LinearLayout>

        <!-- Note -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textStyle="bold"
            android:text="@string/bloodpressure_merge_title_note" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:text="@={ViewModel.note}"
            android:enabled="@{ViewModel.IsEditable, default=false}" />

        <!-- Save -->

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:enabled="@{ViewModel.isSaveButtonEnabled, default=false}"
            android:text="@{ViewModel.SaveButtonLabel, default=@string/weight_merge_button_create}"
            android:onClick="@{() -> ViewModel.OnSaveButtonClicked()}"/>

        <TextView
            android:visibility="@{ViewModel.RecordCouldNotLoadedErrorMessageVisibility, default=visible}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#F00"
            android:text="@string/bloodpressure_merge_information_loading_failed" />

    </LinearLayout>
</layout>